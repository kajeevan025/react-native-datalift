{
  "name": "react-native-datalift",
  "version": "1.2.0",
  "description": "Production-ready document scanner SDK with native OCR, rule-based NLP, and optional AI extraction for React Native",
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "types": "lib/types/index.d.ts",
  "exports": {
    ".": {
      "require": "./lib/cjs/index.js",
      "import": "./lib/esm/index.js",
      "types": "./lib/types/index.d.ts"
    }
  },
  "files": [
    "lib/",
    "android/",
    "ios/",
    "react-native-datalift.podspec",
    "react-native.config.js",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "yarn build:cjs && yarn build:esm && yarn build:types",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "build:esm": "tsc --project tsconfig.esm.json",
    "build:types": "tsc --project tsconfig.types.json",
    "build:watch": "tsc --watch",
    "model:layoutlmv3:download": "bash ./scripts/download-layoutlmv3-offline.sh",
    "model:layoutlmv3:prepare": "bash ./scripts/download-layoutlmv3-offline.sh",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf lib/",
    "publish:npm": "yarn build && yarn publish --access public",
    "example:android": "cd example && react-native run-android",
    "example:ios": "cd example && react-native run-ios",
    "prepublishOnly": "yarn build"
  },
  "peerDependencies": {
    "react": "^17.0.0 || ^18.0.0",
    "react-native": ">=0.70.0",
    "react-native-image-picker": "^5.4.0"
  },
  "peerDependenciesMeta": {
    "react": { "optional": false },
    "react-native": { "optional": false },
    "react-native-image-picker": { "optional": true }
  },
  "optionalDependencies": {
    "tesseract.js": "^5.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-native": "^5.4.0",
    "@testing-library/react-native": "^12.0.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^18.0.0",
    "@types/react": "^18.0.0",
    "@types/react-native": "^0.71.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "react": "^18.0.0",
    "react-native": "^0.71.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "react-native",
    "ocr",
    "document",
    "scanner",
    "receipt",
    "invoice",
    "purchase-order",
    "work-order",
    "datalift",
    "vision",
    "ml-kit",
    "mobile",
    "nlp",
    "structured-extraction",
    "ai",
    "openai",
    "tesseract"
  ],
  "author": "DataLift",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kajeevan025/react-native-datalift.git"
  },
  "homepage": "https://github.com/kajeevan025/react-native-datalift#readme",
  "bugs": {
    "url": "https://github.com/kajeevan025/react-native-datalift/issues"
  },
  "engineStrict": true,
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "yarn@1.22.22"
}